{
  "name": "roadtrip-planner",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "dev": "concurrently -n shared,api,web -c cyan,magenta,yellow \"pnpm --dir packages/shared run dev\" \"pnpm --dir packages/api run dev\" \"pnpm --dir packages/web run dev\"",
    "build": "tsc -b && pnpm --filter @roadtrip/web build",
    "build:clean": "tsc -b --clean",
    "type-check": "pnpm -r --bail exec tsc --noEmit",
    "format": "pnpm exec prettier --write \"packages/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "pnpm exec prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "pnpm -r --bail run lint"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/d3": "^7.4.3",
    "concurrently": "^9.2.1",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "keywords": [],
  "author": "Laury Baillon",
  "license": "ISC",
  "packageManager": "pnpm@10.30.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
